<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#000000"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

            <LinearLayout
                android:id="@+id/layout_encrypt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S A S  S T E"
                    android:textColor="@color/textNormal"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    android:scaleY="1.13"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="M o b i l e"
                    android:textColor="@color/textNormal"
                    android:textSize="40dp"
                    android:paddingBottom="10dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="v3.3.5"
                    android:textColor="@color/textNormal"
                    android:textSize="17dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/heading_encrypt"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:text="Encrypt"
                    android:gravity="left|bottom"
                    android:textColor="@color/textNormal"
                    android:textSize="20dp" />

                    <Button
                        android:id="@+id/button_help_Main"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="right"
                        android:backgroundTint="#000000"
                        android:drawableTop="@drawable/ic_help"
                        android:onClick="buttonManagerMain"/>

                </LinearLayout>

                <Button
                    android:id="@+id/encrypt_new_key"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="New Key"
                    android:textColor="@color/textNormal"
                    android:textSize="18dp"
                    android:onClick="buttonManagerMain"/>

                <Button
                    android:id="@+id/encrypt_existing_key"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Existing Key"
                    android:textColor="@color/textNormal"
                    android:textSize="18dp"
                    android:onClick="buttonManagerMain"/>

                <Button
                    android:id="@+id/encrypt_no_key"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="No Key"
                    android:textColor="@color/textNormal"
                    android:textSize="18dp"
                    android:onClick="buttonManagerMain"/>


                <TextView
                    android:id="@+id/heading_decrypt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:textColor="@color/textNormal"
                    android:textSize="20dp"
                    android:text="Decrypt"/>

                <Button
                    android:id="@+id/decrypt_keyed"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/textNormal"
                    android:textSize="18dp"
                    android:text="Keyed"
                    android:onClick="buttonManagerMain"/>

                <Button
                    android:id="@+id/decrypt_no_key"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/textNormal"
                    android:textSize="18dp"
                    android:text="No Key"
                    android:onClick="buttonManagerMain"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>