<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#000000"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

            <LinearLayout
                android:id="@+id/layout_encrypt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/heading_encrypt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Encrypt"
                    android:textColor="#909090"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/encrypt_new_key"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="New Key"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:onClick="buttonManagerMain"/>

                <Button
                    android:id="@+id/encrypt_existing_key"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="Existing Key"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:onClick="buttonManagerMain"/>

                <Button
                    android:id="@+id/encrypt_no_key"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="No Key"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:onClick="buttonManagerMain"/>


                <TextView
                    android:id="@+id/heading_decrypt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:text="Decrypt"/>

                <Button
                    android:id="@+id/decrypt_keyed"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:text="Keyed"
                    android:onClick="buttonManagerMain"/>

                <Button
                    android:id="@+id/decrypt_no_key"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:text="No Key"
                    android:onClick="buttonManagerMain"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>