<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#000000"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/heading_select_encrypt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount of Times to Encrypt"
                    android:textColor="#909090"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/radio_group_select_encrypt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:checkedButton="@id/ea1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ea1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:layout_weight="0.8"
                        android:text="1"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="encryptAmountManager"/>

                    <RadioButton
                        android:id="@+id/ea2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:layout_weight="0.8"
                        android:text="2"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="encryptAmountManager"/>

                    <RadioButton
                        android:id="@+id/ea3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:layout_weight="0.8"
                        android:text="3"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="encryptAmountManager"/>

                    <RadioButton
                        android:id="@+id/ea4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:layout_weight="0.8"
                        android:text="4"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="encryptAmountManager"/>

                    <RadioButton
                        android:id="@+id/ea5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:layout_weight="0.8"
                        android:text="5"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="encryptAmountManager"/>

                </RadioGroup>

                <Button
                    android:id="@+id/button_generate_key"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="Generate Key"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:onClick="buttonManagerKeyGen"/>

                <TextView
                    android:id="@+id/key_print_area"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="#101010"
                    android:gravity="center"
                    android:textColorHint="#505050"
                    android:hint="Key Display Area"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#909090"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button_share_key"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Share"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="buttonManagerKeyGen"/>

                    <Button
                        android:id="@+id/button_copy_key"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Copy"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="buttonManagerKeyGen"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/key_save_file_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="#101010"
                    android:gravity="center"
                    android:textColorHint="#505050"
                    android:hint="Press To Enter File Name"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="#909090"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/button_save_key_to_file"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:text="Save To File"
                    android:textColor="#909090"
                    android:textSize="20dp"
                    android:onClick="buttonManagerKeyGen"/>


                <LinearLayout
                    android:id="@+id/back_next_buttons_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Back"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="buttonManagerKeyGen"/>

                    <Button
                        android:id="@+id/button_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Next"
                        android:textColor="#909090"
                        android:textSize="20dp"
                        android:onClick="buttonManagerKeyGen"/>

                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>